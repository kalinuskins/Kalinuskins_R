<Window x:Class="Buy_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buy_List"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Cursor="Arrow">
    <Grid Background="Azure">
        <TextBox x:Name="BuyListItemName" HorizontalAlignment="Left" Height="44" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="297" TextChanged="BuyListItemName_TextChanged"/>
        <Button x:Name= "AddListItemButton" Click="AddListItemButton_Click"  Content="Pievienot pirkumu" HorizontalAlignment="Left" Margin="314,5,0,0" VerticalAlignment="Top" Width="164" Height="61"/>
        <TextBlock x:Name="BuyItemName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="0,49,0,0" Height="35" Width="211"/>
        <ScrollViewer Margin="10,71,-2,0">
            <ItemsControl x:Name="BuyItemListControl" RenderTransformOrigin="0.787,1.613" Width="226" Height="203" >
                <ItemsControl.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.429"/>
                        <TranslateTransform X="-13.186" Y="21.626"/>
                    </TransformGroup>
                </ItemsControl.RenderTransform>
            </ItemsControl>
        </ScrollViewer>
        <ItemsControl x:Name="BuyItemsListControl" Margin="474,89,0,149">
        </ItemsControl>
    </Grid>
</Window>
