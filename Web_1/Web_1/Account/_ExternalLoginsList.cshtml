@if (OAuthWebSecurity.RegisteredClientData.Count == 0) {
    <div class="message-info">
        <p>
            Внешние службы проверки подлинности не настроены. Подробности о настройке входа через внешние службы для этого приложения ASP.NET>
            см. в <a href="https://go.microsoft.com/fwlink/?LinkId=226949">этой статье</a>.
        </p>
    </div>
} else {
    <form method="post">
    @AntiForgery.GetHtml()
    <fieldset id="socialLoginList">
        <legend>Вход через другую службу</legend>
        <p>
            @foreach (var client in OAuthWebSecurity.RegisteredClientData) {
                <button type="submit" name="provider" value="@client.AuthenticationClient.ProviderName"
                        title="Войдите, используя свою учетную запись @client.DisplayName">@client.DisplayName</button>
            }
        </p>
    </fieldset>
    </form>
}
